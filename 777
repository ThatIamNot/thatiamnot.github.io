<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>XRP Live Balance Tracker</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom Keyframes for star field effect from original component */
        @keyframes fade-in {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .star {
            position: absolute;
            background: white;
            border-radius: 50%;
            opacity: 0;
            animation: fade-in 3s ease-out infinite alternate;
        }
    </style>
</head>
<body class="bg-gray-900 min-h-screen flex flex-col items-center justify-center p-4">

    <div id="star-field" class="absolute inset-0 overflow-hidden"></div>

    <div class="z-10 w-full max-w-xl">
        <div class="bg-gray-800 shadow-2xl rounded-xl p-8 border border-purple-500/30">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-500">
                    XRP Ledger Account Tracker
                </h1>
                <p class="text-purple-300 mt-2">Live balance refreshed every 7 seconds.</p>
            </div>

            <div id="display-container" class="space-y-6">

                <div id="loading-spinner" class="hidden text-center text-purple-400">
                    <svg class="animate-spin h-5 w-5 mr-3 inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Fetching data...
                </div>

                <div id="error-message" class="hidden text-center text-red-400 p-4 bg-red-900/20 rounded-lg border border-red-500/30"></div>

                <div id="balance-card" class="bg-gradient-to-r from-blue-600/30 to-purple-600/30 rounded-xl p-6 shadow-lg border border-white/10 hidden">
                    <p class="text-white text-sm uppercase tracking-wider opacity-75">Current Balance</p>
                    <div class="flex items-end justify-between mt-2">
                        <span id="xrp-balance" class="text-5xl font-bold text-white leading-tight">
                            0.00
                        </span>
                        <span class="text-2xl text-purple-300 ml-2">XRP</span>
                    </div>
                    <div id="sequence-display" class="mt-4 text-sm text-blue-200">
                        Sequence: N/A
                    </div>
                </div>

                <div class="mt-6 p-4 bg-white/5 rounded-lg border border-purple-300/20">
                    <p class="text-purple-200 text-xs uppercase tracking-wide mb-1">Address</p>
                    <p id="address-display" class="text-white font-mono text-sm break-all"></p>
                </div>

            </div>
            
            <div class="mt-6 text-center p-4 bg-gradient-to-r from-purple-500/10 via-pink-500/10 to-blue-500/10 rounded-lg border border-purple-300/20">
                <p class="text-purple-200 italic">
                    "Together we stand for financial freedom and decentralization"
                </p>
            </div>
        </div>

        <div class="text-center mt-12 text-purple-300/60">
            <p class="text-sm">âœ¨ Building the future of finance, together âœ¨</p>
        </div>
    </div>

    <script>
        // ðŸš¨ IMPORTANT: Replace the placeholder address below with your desired XRP address
        const XRP_ADDRESS = 'rHb9CJAWyB45a9hoq9ayvmR458kWUu6ox8'; // Placeholder for the user's address
        const API_URL = `https://api.xrpscan.com/api/v1/account/${XRP_ADDRESS}`;
        const REFRESH_INTERVAL_MS = 7000; // 7 seconds

        // DOM elements
        const loadingSpinner = document.getElementById('loading-spinner');
        const errorMessage = document.getElementById('error-message');
        const balanceCard = document.getElementById('balance-card');
        const xrpBalanceElement = document.getElementById('xrp-balance');
        const addressDisplay = document.getElementById('address-display');
        const sequenceDisplay = document.getElementById('sequence-display');
        const starField = document.getElementById('star-field');
        
        addressDisplay.textContent = XRP_ADDRESS;

        // Function to fetch the balance and update the DOM
        const fetchBalance = async () => {
            // Reset state
            errorMessage.classList.add('hidden');
            balanceCard.classList.add('hidden');
            loadingSpinner.classList.remove('hidden');

            try {
                const response = await fetch(API_URL);

                if (!response.ok) {
                    // Check for specific error status (e.g., 404 for account not found)
                    if (response.status === 404) {
                        throw new Error('XRP account not found or invalid address.');
                    }
                    throw new Error(`Failed to fetch data (Status: ${response.status})`);
                }

                const data = await response.json();

                // API balance is in "drops" (1 XRP = 1,000,000 drops). Convert to XRP.
                const xrpAmount = (parseFloat(data.balance) / 1000000);
                
                // Update DOM with fetched data
                xrpBalanceElement.textContent = xrpAmount.toLocaleString(undefined, {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 6
                });
                sequenceDisplay.textContent = `Sequence: ${data.sequence || 'N/A'}`;
                
                // Show the balance card and hide loading
                balanceCard.classList.remove('hidden');

            } catch (err) {
                // Display error
                errorMessage.textContent = err.message || 'An unknown error occurred.';
                errorMessage.classList.remove('hidden');
                balanceCard.classList.add('hidden'); // Ensure balance card is hidden on error
            } finally {
                // Hide loading spinner
                loadingSpinner.classList.add('hidden');
            }
        };

        // Function to generate the starfield effect
        const generateStarfield = () => {
            const numStars = 100;
            for (let i = 0; i < numStars; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.width = star.style.height = `${Math.random() * 2 + 1}px`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.opacity = Math.random() * 0.5 + 0.5;
                star.style.animationDelay = `${Math.random() * 3}s`;
                starField.appendChild(star);
            }
        };

        // --- Execution ---

        // 1. Generate Starfield
        generateStarfield();

        // 2. Fetch data immediately on load
        fetchBalance();

        // 3. Set interval to fetch data repeatedly (7000ms = 7 seconds)
        setInterval(fetchBalance, REFRESH_INTERVAL_MS);

    </script>
</body>
</html>
